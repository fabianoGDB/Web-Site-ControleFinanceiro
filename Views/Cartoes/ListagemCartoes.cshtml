@model IEnumerable<Web.Site.GerenciadorCartao.Models.Cartao>

@{
    ViewData["Title"] = "Listagem de Cartões";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListagemCartoes</h1>

<p>
    <a asp-action="NovoCartao" class="btn btn-success btn-sm">Novo Cartão</a>
</p>
<table class="table table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeBanco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCartao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Limite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeBanco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCartao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Limite)
            </td>
            <td>
                <a asp-action="AtualizarCartao" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Atualizar</a> |
                <a asp-controller="Gastos" asp-action="ListagemGastos" asp-route-cartaoId="@item.Id" class="btn btn-sm btn-secondary">Gastos</a> |
                <form asp-action="ExcluirCartao" asp-route-id="@item.Id"  onclick="confirm('Prosseguir com a exclusão.')">
                    <button type="submit" class="btn btn-sm btn-danger">Excluir</button></form>
            </td>
        </tr>
}
    </tbody>
</table>
